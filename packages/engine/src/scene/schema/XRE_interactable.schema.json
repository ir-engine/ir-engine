{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "XRE_interactable.schema.json",
  "title": "XRE_interactable glTF extension",
  "type": "object",
  "description": "serialization extension for XREngine interactable components",
  "allOf": [{ "$ref": "glTFProperty.schema.json" }],
  "properties": {
    "interactionType": {
      "type": "string",
      "anyOf": [{ "const": "equippable" }, { "const": "default" }]
    },
    "interactionText": { "type": "string" },
    "interactionDistance": { "type": "number" },
    "interactionName": { "type": "string" },
    "interactionDescription": { "type": "string" },
    "interactionImages": {
      "type": "array",
      "items": {
        "$ref": "url.schema.json"
      }
    },
    "interactionVideos": {
      "type": "array",
      "items": {
        "$ref": "url.schema.json"
      }
    },
    "interactionUrls": {
      "type": "array",
      "items": {
        "$ref": "url.schema.json"
      }
    },
    "interactionModels": {
      "type": "array",
      "items": {
        "$ref": "url.schema.json"
      }
    },
    "interactionUserData": {
      "type": "object"
    },
    "action": {
      "type": "object"
    },
    "validUserId": {
      "type": "string"
    }
  },
  "extensions": {},
  "extras": {}
}
