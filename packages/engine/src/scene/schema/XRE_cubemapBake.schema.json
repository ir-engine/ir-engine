{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "XRE_envMapBake glTF extension",
  "$id": "XRE_envMapBake.schema.json",
  "type": "object",
  "description": "serialization extension for XREngine envmap bake components",
  "allOf": [{ "$ref": "glTFProperty.schema.json" }],
  "properties": {
    "bakePosition": {
      "$ref": "vec3.schema.json",
      "default": { "x": 0, "y": 0, "z": 0 }
    },
    "bakePositionOffset": {
      "$ref": "vec3.schema.json",
      "default": { "x": 0, "y": 0, "z": 0 }
    },
    "bakeScale": {
      "$ref": "vec3.schema.json",
      "default": { "x": 1, "y": 1, "z": 1 }
    },
    "bakeType": {
      "type": "string",
      "anyOf": [{ "const": "Realtime" }, { "const": "Baked" }]
    },
    "resolution": {
      "type": "integer",
      "minimum": 0,
      "default": 1024
    },
    "refreshMode": {
      "type": "string",
      "anyOf": [{ "const": "OnAwake" }, { "const": "EveryFrame" }]
    },
    "envMapOrigin": {
      "type": "string",
      "default": ""
    },
    "boxProjection": {
      "type": "boolean",
      "default": true
    }
  },
  "extensions": {},
  "extras": {}
}
