{
  "name": "ee-template",
  "version": "0.0.0",
  "scripts": {
    "test": "mocha --config .mocharc.js",
    "check-errors": "tsc --noemit",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format-scss": "stylelint \"**/*.scss\" --fix",
    "format-staged": "lint-staged",
    "precommit": "no-master-commits -b master"
  },
  "license": "ISC",
  "pre-commit": [
    "format-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}