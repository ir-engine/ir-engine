{
  "name": "@ir-engine/ir-template",
  "version": "0.0.0",
  "scripts": {
    "test": "mocha --config .mocharc.js",
    "check-errors": "tsc --noemit",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format-scss": "stylelint \"**/*.scss\" --fix",
    "format-staged": "lint-staged"
  },
  "license": "ISC",
  "pre-commit": [
    "format-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write \"**/*.{ts,tsx}\""
    ],
    "*.scss": [
      "stylelint \"**/*.scss\" --fix"
    ]
  }
}